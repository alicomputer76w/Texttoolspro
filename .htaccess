# AGGRESSIVE CANONICAL URL ENFORCEMENT
RewriteEngine On

# Block any requests with old domain in referrer or query
RewriteCond %{HTTP_REFERER} alicomputer76w\.github\.io [NC,OR]
RewriteCond %{QUERY_STRING} alicomputer76w\.github\.io [NC]
RewriteRule ^(.*)$ https://texttoolspro.fun/$1? [R=301,L]

# Force HTTPS redirect
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Redirect old GitHub Pages domain to new domain (AGGRESSIVE)
RewriteCond %{HTTP_HOST} ^alicomputer76w\.github\.io$ [NC]
RewriteRule ^(.*)$ https://texttoolspro.fun/$1 [R=301,L]

# Force canonical domain (redirect www to non-www)
RewriteCond %{HTTP_HOST} ^www\.texttoolspro\.fun$ [NC]
RewriteRule ^(.*)$ https://texttoolspro.fun/$1 [R=301,L]

# Redirect homepage variations to canonical URL (STRICT)
RewriteCond %{REQUEST_URI} ^/index\.html$ [NC]
RewriteRule ^(.*)$ https://texttoolspro.fun/ [R=301,L]

RewriteCond %{REQUEST_URI} ^/index\.php$ [NC]
RewriteRule ^(.*)$ https://texttoolspro.fun/ [R=301,L]

RewriteCond %{REQUEST_URI} ^/home/?$ [NC]
RewriteRule ^(.*)$ https://texttoolspro.fun/ [R=301,L]

# FORCE CANONICAL HEADERS FOR ALL PAGES
<IfModule mod_headers.c>
    # Homepage canonical headers
    <Files "index.html">
        Header always set Link '<https://texttoolspro.fun/>; rel="canonical"'
        Header always set X-Canonical-URL "https://texttoolspro.fun/"
        Header always set X-Robots-Tag "index, follow"
        Header always set Cache-Control "public, max-age=3600"
    </Files>
    
    # Global canonical enforcement
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Add trailing slash to directories and files (except for files with extensions)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !(.*)/$
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1/ [R=301,L]

# Remove .html extension and add trailing slash
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1/ [NC,L,R=301]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^.]+)/$ $1.html [L]
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Set proper MIME type for XML files and robots.txt
<IfModule mod_mime.c>
    AddType application/xml .xml
    AddType text/xml .xml
    AddType text/plain .txt
</IfModule>

# Specific handling for robots.txt
<Files "robots.txt">
    Header set Content-Type "text/plain; charset=UTF-8"
    Header set Cache-Control "public, max-age=86400"
</Files>

# Cache control
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType application/xml "access plus 1 day"
    ExpiresByType text/xml "access plus 1 day"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>